<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @rental_property.name %>
</p>

<p>
  <strong>賃料:</strong>円
  <%= @rental_property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @rental_property.address %>
</p>

<p>
  <strong>築年数:</strong>年
  <%= @rental_property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @rental_property.note %>
</p>

<hr>
<% counter = 1 %>
  <%@rental_property.stations.each do |station| %>
    <p><%= "最寄り駅#{counter}"%></p>
    <p>
      <strong>路線名:</strong>
      <%= station.line_name %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= station.station_name %>
    </p>

    <p>
      <strong>徒歩分数:</strong>
      <%= station.time %>
    </p>
    <% counter += 1 %>
    <br>
  <% end %>

<%= link_to 'Edit', edit_rental_property_path(@rental_property) %> |
<%= link_to 'Back', rental_properties_path %>
